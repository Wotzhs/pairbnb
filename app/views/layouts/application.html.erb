<!DOCTYPE html>
<html>
<head>
  <title>Pairbnb</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= form_tag(listings_url, method: :get) do %>
	<%= text_field_tag 'search[destination]', nil, placeholder: "Search for accomodation at your destination" %>
<% end %>

<%= yield %>

</body>
</html>
