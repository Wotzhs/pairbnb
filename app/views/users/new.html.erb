<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>

    <%= form.label :first_name %>
    <%= form.text_field :first_name, type: 'text', required: 'required' %>

    <%= form.label :last_name %>
    <%= form.text_field :last_name, type: 'text', required: 'required' %>

    <%= render partial: '/users/form', object: form %>

    <%= form.label :date_of_birth %>
    <%= form.text_field :date_of_birth, type: 'text' , placeholder: 'DD/MM/YYYY', required: 'required' %>

    <div class="submit-field">
      <%= form.submit %>
    </div>

    <div class="other-links">
      <%= link_to t(".sign_in"), sign_in_path %>
    </div>
  <% end %>
</div>
